{
  "name": "Haskell",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "haskell"
    }
  },
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "customizations": {
    "vscode": {
      "settings": {
        "[haskell]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        }
      },
      "extensions": ["haskell.haskell"]
    }
  }
}
